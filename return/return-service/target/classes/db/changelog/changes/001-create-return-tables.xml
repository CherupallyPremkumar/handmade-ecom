<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="001-create-return-tables" author="handmade">
        <!-- Return Request Table -->
        <createTable tableName="return_request">
            <column name="id" type="varchar(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="order_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="customer_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="return_reason" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="return_status" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="return_type" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="tenant_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Return Item Table -->
        <createTable tableName="return_item">
            <column name="id" type="varchar(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="return_request_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="product_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="return_condition" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="refund_amount" type="decimal(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="currency" type="varchar(3)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="tenant_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Return Shipping Table -->
        <createTable tableName="return_shipping">
            <column name="id" type="varchar(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="return_request_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="tracking_number" type="varchar(100)">
                <constraints nullable="true"/>
            </column>
            <column name="shipping_carrier" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="shipping_status" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="shipping_label_url" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="tenant_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Add Foreign Key Constraints -->
        <addForeignKeyConstraint baseTableName="return_item"
                                baseColumnNames="return_request_id"
                                constraintName="fk_return_item_request"
                                referencedTableName="return_request"
                                referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="return_shipping"
                                baseColumnNames="return_request_id"
                                constraintName="fk_return_shipping_request"
                                referencedTableName="return_request"
                                referencedColumnNames="id"/>

        <!-- Add Indexes -->
        <createIndex indexName="idx_return_request_order_id"
                    tableName="return_request">
            <column name="order_id"/>
        </createIndex>

        <createIndex indexName="idx_return_request_customer_id"
                    tableName="return_request">
            <column name="customer_id"/>
        </createIndex>

        <createIndex indexName="idx_return_item_product_id"
                    tableName="return_item">
            <column name="product_id"/>
        </createIndex>

        <createIndex indexName="idx_return_shipping_tracking"
                    tableName="return_shipping">
            <column name="tracking_number"/>
        </createIndex>
    </changeSet>
</databaseChangeLog> 