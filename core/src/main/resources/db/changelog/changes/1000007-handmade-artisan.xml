<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- 1. Create the base artisan table -->
    <changeSet id="1000007-artisan" author="premkumar (generated)">
        <createTable tableName="hm_artisan">
            <column name="id" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="specialty" type="VARCHAR(255)"/>
            <column name="region" type="VARCHAR(100)"/>
            <column name="contact_info" type="VARCHAR(255)"/>
            <column name="bio" type="TEXT"/>
            <!-- Optional: STM state management -->
            <column name="state" type="VARCHAR(50)"/>
            <column name="flow_id" type="VARCHAR(100)"/>
            <column name="state_id" type="VARCHAR(100)"/>
            <column name="state_entry_time" type="TIMESTAMP"/>
            <column name="sla_yellow_date" type="TIMESTAMP"/>
            <column name="sla_red_date" type="TIMESTAMP"/>
            <column name="sla_tending_late" type="INT" defaultValueNumeric="0"/>
            <column name="sla_late" type="INT" defaultValueNumeric="0"/>
            <!-- BaseJpaEntity inherited audit/system fields -->
            <column name="created_time" type="TIMESTAMP"/>
            <column name="last_modified_time" type="TIMESTAMP"/>
            <column name="last_modified_by" type="VARCHAR(255)"/>
            <column name="created_by" type="VARCHAR(255)"/>
            <!-- The tenant column which later becomes a foreign key -->
            <column name="tenant" type="VARCHAR(255)"/>
            <column name="version" type="BIGINT"/>
        </createTable>
        <rollback>
            <dropTable tableName="hm_artisan"/>
        </rollback>
    </changeSet>

    <!-- 2. Rename "name" column to "artisan_name" -->
    <changeSet id="20250406-rename-" author="prem">
        <renameColumn
                tableName="hm_artisan"
                oldColumnName="name"
                newColumnName="artisan_name"
                columnDataType="VARCHAR(255)"/>
    </changeSet>

    <!-- 3. Add foreign key constraint for tenant column -->
    <changeSet id="20240408-add-fk-artisan-tenant" author="premkumar">
        <addForeignKeyConstraint
                baseTableName="hm_artisan"
                baseColumnNames="tenant"
                referencedTableName="hm_tenant"
                referencedColumnNames="id"
                constraintName="fk_artisan_tenant"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="hm_artisan" constraintName="fk_artisan_tenant"/>
        </rollback>
    </changeSet>

    <!-- 4. Add parent_artisan_id column to support parent-child hierarchy -->
    <changeSet id="20250407-add-parent-artisan-column" author="prem">
        <addColumn tableName="hm_artisan">
            <column name="parent_artisan_id" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <!-- Add the foreign key constraint so that a row referencing a parent artisan exists in hm_artisan -->
        <addForeignKeyConstraint
                baseTableName="hm_artisan"
                baseColumnNames="parent_artisan_id"
                referencedTableName="hm_artisan"
                referencedColumnNames="id"
                constraintName="fk_parent_artisan"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="hm_artisan" constraintName="fk_parent_artisan"/>
            <dropColumn tableName="hm_artisan" columnName="parent_artisan_id"/>
        </rollback>
    </changeSet>


</databaseChangeLog>