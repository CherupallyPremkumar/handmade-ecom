<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create-product-price-table-202405301530" author="premkumar">
        <createTable tableName="hm_product_price">
            <column name="id" type="varchar(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_time" type="timestamp"/>
            <column name="last_modified_time" type="timestamp"/>
            <column name="last_modified_by" type="varchar(255)"/>
            <column name="tenant" type="varchar(255)"/>
            <column name="created_by" type="varchar(255)"/>
            <column name="version" type="bigint" defaultValue="0"/>
            <column name="product_id" type="VARCHAR(255)">
                <constraints nullable="false" foreignKeyName="fk_product_price_product" references="hm_product(id)"/>
            </column>
            <column name="location_code" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="currency_code" type="VARCHAR(5)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <!-- Create unique constraint to prevent duplicate prices for same product/location/currency -->
        <addUniqueConstraint 
            tableName="hm_product_price" 
            columnNames="product_id, location_code, currency_code"
            constraintName="uk_product_price_location_currency"/>
            
        <rollback>
            <dropTable tableName="hm_product_price"/>
        </rollback>
    </changeSet>
    
